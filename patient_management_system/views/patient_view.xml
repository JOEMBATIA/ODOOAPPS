<odoo>
    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">patient.management.form</field>
        <field name="model">patient.management</field>
        <field name="arch" type="xml">
            <form string="Patient Management">
                <group>
                    <field name="name"/>
                    <field name="patient_id"/>
                    <field name="age"/>
                    <field name="gender"/>
                    <field name="address"/>
                    <field name="hospital"/>
                    <field name="contact_number"/>
                </group>
                <notebook>
                    <page string="Expenses">
                        <field name="expenses_ids">
                            <tree editable="bottom">
                                <field name="date"/>
                                <field name="description"/>
                                <field name="amount"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Progress">
                        <field name="progress_ids">
                            <tree editable="bottom">
                                <field name="date"/>
                                <field name="description"/>
                                <field name="status"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <menuitem id="menu_patient_management"
              parent="menu_patient_root"
              action="action_patient_form"
              sequence="1"/>
</odoo>
