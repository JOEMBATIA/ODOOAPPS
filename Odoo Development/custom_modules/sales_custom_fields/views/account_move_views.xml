<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Product Description to Invoice Lines -->
    <record id="view_move_form_product_description" model="ir.ui.view">
        <field name="name">account.move.form.product.description</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add Product Description column to invoice lines -->
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="after">
                <field name="product_description" string="Product Description" width="350" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>