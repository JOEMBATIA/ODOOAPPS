<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="action_CMS_appointment_template" model="ir.actions.act_window">
            <field name="name">Appointment templates</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syscraft.appointment.template.tbl</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_appointment_template_form" model="ir.ui.view">
            <field name="name">appointment_template_view_form</field>
            <field name="model">syscraft.appointment.template.tbl</field>
            <field name="arch" type="xml">
                <form String="Appointment Template">
                    <sheet>
                        <group>
                            <div class="oe_title" name="ref_number" string="Reference Number">
                                <h1>
                                    <field name="ref_number"/>
                                </h1>
                            </div>
                            <group>
                                <field name="appointment_start"/>
                                <field name="appointment_end"/>
                                <field name="appointment_duration" string="Appointment Duration(in minutes) "/>
                            </group>
                            <group>
                                <field name="resource_id"/>
                                <field name="urgent"/>
                                <field name="appointment_color" widget="color"/>
                            </group>
                        </group>
                    </sheet>

                    <!--                    <div class="oe_chatter">-->
                    <!--                        <field name="message_follower_ids" groups="base.group_user"/>-->
                    <!--                        <field name="message_ids"/>-->
                    <!--                    </div>-->
                </form>
            </field>
        </record>

        <record id="appointment_template_tree" model="ir.ui.view">
            <field name="name">appointment_template_tree</field>
            <field name="model">syscraft.appointment.template.tbl</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ref_number"/>
                    <field name="appointment_start"/>
                    <field name="appointment_end"/>
                    <field name="appointment_color"/>
                </tree>
            </field>
        </record>


        <menuitem id="menu_Tools_Appointment_Template"
                  name="Appointment Template"
                  parent="menu_Tools"
                  action="action_CMS_appointment_template"
                  sequence="10"
        />
    </data>
</odoo>