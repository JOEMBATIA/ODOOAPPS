<!-- These are the menus for a specific module in this case the SysCMS module -->

<odoo>
    <record id="action_CMS_investigations_collect_sample" model="ir.actions.act_window">
        <field name="name">Collect Sample</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">syscraft.clinic.investigations.collect.sample.tbl</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_collect-sample_form" model="ir.ui.view">
        <field name="name">collect-sample_view_form</field>
        <field name="model">syscraft.clinic.investigations.collect.sample.tbl</field>
        <field name="arch" type="xml">
            <form String="Collect Sample">
                <!--<header>
                    <field name="state" widget="statusbar" options="{'clickable' : '1'}"
                           statusbar_visible="draft,done,confirm"/>
                </header> -->
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <b>Collect Sample</b>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <div class="oe_title" name="REF_NO" string="Reference Number">

                            </div>
                        </group>
                        <group>
                            <field name="PATIENT"/>
                            <field name="PHYSICIAN_id"/>
                            <field name="CATEGORIES"/>
                        </group>
                        <group>
                            <field name="DATE"/>
                            <field name="INVESTIGATION"/>
                            <field name="TYPE"/>
                            <field name="CLINIC"/>
                        </group>
                        <notebook>
                            <page string="Notes" name="Notes">
                                <div>
                                    <group>
                                        <field name="NOTES"/>
                                    </group>
                                </div>
                            </page>
                            <page string="Other info" name="Other info">
                                <div>
                                    <field name="OTHER"/>
                                </div>
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_collect-sample_search" model="ir.ui.view">
        <field name="name">collect-sample_view_search</field>
        <field name="model">syscraft.clinic.investigations.collect.sample.tbl</field>
        <field name="arch" type="xml">
            <search string="Patients">
                <field name="PATIENT"/>
                <field name="INVESTIGATION"/>
                <field name="TYPE"/>
                <field name="END_DATE"/>
                <field name="CATEGORIES"/>

            </search>
        </field>
    </record>

    <record id="view_collect_sample_tree" model="ir.ui.view">
        <field name="name">collect-sample_view_search</field>
        <field name="model">syscraft.clinic.investigations.collect.sample.tbl</field>
        <field name="arch" type="xml">
            <tree string="Collect Sample">
                <field name="DATE"/>
                <field name="PATIENT"/>
                <field name="INVESTIGATION"/>
                <field name="TYPE"/>
                <field name="PHYSICIAN_id"/>
                <field name="CLINIC"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_Investigations_Collect_Sample"
              name="Collect Sample"
              parent="menu_Investigations"
              action="action_CMS_investigations_collect_sample"
              sequence="10"
    />

</odoo>