<odoo>
    <data>
        <record id="action_CMS_pending_signing" model="ir.actions.act_window">
            <field name="name">Pending Signing</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syscraft.pending.signing.tbl</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <record id="view_pending_signing_tree" model="ir.ui.view">
            <field name="name">pending_signing_view_tree</field>
            <field name="model">syscraft.pending.signing.tbl</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date"/>
                    <field name="doc_details"/>
                    <field name="patient_details"/>
                    <field name="created_and_clinic"/>
                    <field name="signed_by"/>
                </tree>
            </field>
        </record>

        <record id="view_pending_signing_form" model="ir.ui.view">
            <field name="name">pending_signing_view_form</field>
            <field name="model">syscraft.pending.signing.tbl</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <b>Pending Signing</b>
                            </h1>
                        </div>
                        <group>
                            <field name="date"/>
                            <field name="doc_name"/>
                            <field name="doc_created_date"/>
                        </group>
                        <group>
                            <field name="patient_name_id"/>
                            <field name="patient_phone"/>
                            <field name="patient_email"/>
                        </group>
                        <group>
                            <field name="created_by"/>
                            <field name="clinic"/>
                            <field name="signed_by"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem id="menu_Pending_Signing"
                  name="Pending_Signing"
                  parent="menu_Documents"
                  action="action_CMS_pending_signing"
                  sequence="10"
        />
    </data>
</odoo>