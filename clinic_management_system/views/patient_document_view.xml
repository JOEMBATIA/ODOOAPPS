<odoo>
    <data noupdate="0">
        <record id="action_CMS_patient_documents" model="ir.actions.act_window">
            <field name="name">Patient Documents</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syscraft.patient.documents.tbl</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <record id="view_patient_document_form" model="ir.ui.view">
            <field name="name">patient_document_view_form</field>
            <field name="model">syscraft.patient.documents.tbl</field>
            <field name="arch" type="xml">
                <form String="Patient Document">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_add_doc" type="object" icon="fa-file "
                                    string="Add Doc."/>
                            <button name="action_view_doc" type="object" icon="fa-folder-open"
                                    string="View Doc."/>
                            <button name="action_open_write_letter" type="object" icon="fa-envelope"
                                    string="Write Letter"/>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <b>Patient Documents</b>
                            </h1>
                        </div>
                        <div>
                            <field name="IMAGE" widget="image" class="oe_avatar"/>
                        </div>
                        <group>
                            <div class="oe_title">
                                <b>
                                    <field name="REF_NO" placeholder="REF NO"/>
                                </b>
                            </div>
                            <group>
                                <field name="patient_name_id"/>
                                <field name="patient_age"/>
                                <field name="patient_gender"/>
                                <field name="patient_phone"/>
                                <field name="patient_email"/>
                                <field name="clinic_name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_patient_documents_tree" model="ir.ui.view">
            <field name="name">patient_documents_view_tree</field>
            <field name="model">syscraft.patient.documents.tbl</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="patient_name_id"/>
                    <field name="patient_age"/>
                    <field name="patient_gender"/>
                    <field name="patient_phone"/>
                    <field name="patient_email"/>
                    <field name="clinic_name"/>
                </tree>
            </field>
        </record>

        <menuitem id="menu_Patient_Documents"
                  name="Patient_Documents"
                  parent="menu_Documents"
                  action="action_CMS_patient_documents"
                  sequence="10"
        />
    </data>
</odoo>