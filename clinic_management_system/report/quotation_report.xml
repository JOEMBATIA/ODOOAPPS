<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--    <link rel="stylesheet" href="/clinic_management_system/static/src/css/custom_styles.css"/>-->

    <data>
        <template id="quotation_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="object">
                    <t t-call="web.external_layout">
                        <br/>
                        <br/>
                        <div class="header">
                            <h2>Invoice</h2>
                            <p>Invoice Number:
                                <span t-field="object.REF_NO"/>
                            </p>
                        </div>
                        <br/>
                        <br/>
                        <!-- Company Information Section -->
                        <!--            <div class="company-info">-->
                        <!--                <h3>Company Information</h3>-->
                        <!--                <p>Company:-->
                        <!--                    <span t-field="o.company_id.name"/>-->
                        <!--                </p>-->
                        <!--                <p>Address:-->
                        <!--                    <span t-field="o.company_id.partner_id.street"/>-->
                        <!--                </p>-->
                        <!--                &lt;!&ndash; Add other company fields as needed &ndash;&gt;-->
                        <!--            </div>-->

                        <!-- Customer Information Section -->
                        <br/>
                        <br/>
                        <div class="Supplier-info">
                            <h3>Supplier Information</h3>
                            <p>Supplier:
                                <span t-field="object.NAME"/>
                            </p>
                            <p>Supplier Email:
                                <span t-field="object.EMAIL"/>
                            </p>
                        </div>
                        <br/>
                        <br/>
                        <div class="Quotation-details">
                            <h3>Quotation Details</h3>
                            <p>Quotation Date:
                                <span t-esc="object.quotation_date"/>
                            </p>
                            <p>Due Date:
                                <span t-esc="object.quotation_due_date"/>
                            </p>
                            <p>Quotation Status:
                                <span t-field="object.PAYMENT_STATE"/>
                            </p>
                        </div>
                        <br/>
                        <br/>

                        <div class="Quotation-lines">
                            <h3>Quotation Lines</h3>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Discount</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="object.quotation_lines" t-as="line">
                                        <td>
                                            <span t-field="line.item_id.product"/>
                                        </td>
                                        <td>
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td>
                                            <span t-field="line.price"/>
                                        </td>
                                        <td>
                                            <span t-field="line.discount"/>
                                        </td>
                                        <td>
                                            <span t-field="line.total"/>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                        <br/>
                        <br/>
                        <!-- Total Amount Section -->
                        <div class="total-amount">
                            <p>
                                <h4>
                                    <b>Total Amount: KSH</b>
                                    <span t-esc="sum(float(line.total) for line in object.quotation_lines)"/>
                                </h4>
                            </p>
                        </div>

                    </t>
                </t>
            </t>
        </template>

        <record id="quotation_report" model="ir.actions.report">
            <field name="name">Quotation</field>
            <field name="model">syscraft.clinic.financials.quotation.tbl</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">clinic_management_system.quotation_report_template</field>
            <field name="report_file">clinic_management_system.quotation_report_template</field>
            <field name="print_report_name">'Quotation'</field>
            <field name="binding_model_id"
                   ref="clinic_management_system.model_syscraft_clinic_financials_quotation_tbl"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>