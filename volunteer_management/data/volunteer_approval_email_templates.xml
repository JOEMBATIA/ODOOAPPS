<odoo>
    <data noupdate="0">
        <record id="volunteer_approval_email_template" model="mail.template">
            <field name="name">Volunteer Application Approval</field>
            <field name="model_id" ref="volunteer_management.model_volunteer_volunteer"/>
            <field name="subject">Volunteer Application Approved</field>
            <field name="email_from">{{ user.email }}</field>
            <field name="email_to">{{ object.email }}</field>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0"
                       style="padding-top: 16px; background-color: #FFFFFF; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;">
                    <tr>
                        <td align="center">
                            <table border="0" cellpadding="0" cellspacing="0" width="590"
                                   style="padding: 16px; background-color: #FFFFFF; color: #454748; border-collapse:separate;">
                                <tbody>
                                    <!-- HEADER -->
                                    <tr>
                                        <td align="center" style="min-width: 590px;">
                                            <table border="0" cellpadding="0" cellspacing="0" width="590"
                                                   style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                                <tr>
                                                    <td colspan="2" style="text-align:center;">
                                                        <hr width="100%"
                                                            style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <!-- CONTENT -->
                                    <tr>
                                        <td align="center" style="min-width: 590px;">
                                            <table border="0" cellpadding="0" cellspacing="0" width="590"
                                                   style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                                <tr>
                                                    <td valign="top" style="font-size: 13px;">
                                                        <div>
                                                            Dear <t t-esc="object.name or ''"/>,
                                                            <br/>
                                                            <br/>
                                                            We highly appreciate you for taking the time to apply for
                                                            the
                                                            <t t-esc="object.project_ids.name"/>
                                                            program,
                                                            and we are delighted to inform you your application has been
                                                            approved
                                                            <br/>
                                                            <br/>
                                                            We will get back to you shortly on the program's invoice.
                                                            <br/>
                                                            <br/>
                                                            Please visit the <a href="https://square.link/u/6wPUAymW">portal</a> and update your payment information.

                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="text-align:center;">
                                                        <hr width="100%"
                                                            style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <!-- FOOTER -->
                                    <tr>
                                        <td align="center" style="min-width: 590px;">
                                            <table border="0" cellpadding="0" cellspacing="0" width="590"
                                                   style="min-width: 590px; background-color: white; font-size: 11px; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                                <tr>
                                                    <td valign="middle" align="left">
                                                        <img src="https://www.google.com/url?sa=i&amp;url=https%3A%2F%2Fucesco.org%2Fabout-us%2F&amp;psig=AOvVaw0DQ3_m5o-fzBwIGa7OFQis&amp;ust=1748606620462000&amp;source=images&amp;cd=vfe&amp;opi=89978449&amp;ved=0CBQQjRxqFwoTCJCyuLfRyI0DFQAAAAAdAAAAABAL" alt="Logo" style="vertical-align: middle; margin-right: 10px;" width="50" height="50"/>
                                                        UCESCO Africa
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </table>
            </field>
            <field name="lang">{{ object.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
