        <record id="prescription_email_template" model="mail.template">
            <field name="name">Prescription and Invoice</field>
            <field name="model_id" ref="SyscraftClinicManagement.model_syscraft_clinic_pharmacy_tbl"/>
            <field name="email_from">{{ (object.patient_name_id.EMAIL) or user.email_formatted}}</field>
