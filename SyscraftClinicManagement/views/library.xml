<odoo>
    <data>
        <record id="action_SysCMS_library" model="ir.actions.act_window">
            <field name="name">Library</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syscraft.library.tbl</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <record id="view_library_tree" model="ir.ui.view">
            <field name="name">view_library_tree</field>
            <field name="model">syscraft.library.tbl</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date"/>
                    <field name="doc_details"/>
                    <field name="created_and_clinic"/>
                </tree>
            </field>
        </record>

        <record id="view_library_form" model="ir.ui.view">
            <field name="name">view_library_form</field>
            <field name="model">syscraft.library.tbl</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <b>Upload Document</b>
                            </h1>
                        </div>
                        <group>
                            <field name="date"/>
                            <field name="attachment"/>
                            <field name="file_category"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem id="menu_Library"
                  name="Library"
                  parent="menu_Documents"
                  action="action_SysCMS_library"
                  sequence="10"
        />
    </data>
</odoo>