<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="action_SysCMS_immunisation_schedule" model="ir.actions.act_window">
            <field name="name">Immunization Schedule</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syscraft.immunization.schedule.tbl</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="immunization_schedule_view_form" model="ir.ui.view">
            <field name="name">immunization_schedule_form</field>
            <field name="model">syscraft.immunization.schedule.tbl</field>
            <field name="arch" type="xml">
                <form string="Immunisation Schedules">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <b>Immunisation Schedules</b>
                            </h1>
                        </div>
                        <group>
                            <div class="oe_title" name="REF_NO" string="Reference Number">

                            </div>
                            <group>
                                <field name="name"/>
                                <field name="schedule_start"/>
                            </group>
                            <notebook>
                                <page name="Item Line" string="Item Lines">
                                    <field name="immunisation_item_ids" widget="section_and_note_one2many"
                                           mode="tree,kanban">
                                        <tree editable="bottom">
                                            <field name="immunisation_item_id"/>
                                            <field name="interval"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>

                    </sheet>
                </form>

            </field>

        </record>

        <record id="immunization_schedule_view_tree" model="ir.ui.view">
            <field name="name">immunization_schedule_tree</field>
            <field name="model">syscraft.immunization.schedule.tbl</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="schedule_start"/>
                </tree>

            </field>

        </record>

        <menuitem id="menu_Tools_Immunisations_Schedules"
                  name="Immunisations Schedules"
                  parent="menu_Tools"
                  action="action_SysCMS_immunisation_schedule"
                  sequence="10"
        />
    </data>
</odoo>