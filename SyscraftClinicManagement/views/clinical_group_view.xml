<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="action_SysCMS_clinical_group" model="ir.actions.act_window">
            <field name="name">Clinical Group</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syscraft.clinical.groups.tbl</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="clinical_group_view_form" model="ir.ui.view">
            <field name="name">clinical_group_form</field>
            <field name="model">syscraft.clinical.groups.tbl</field>
            <field name="arch" type="xml">
                <form string="Clinical Details">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <b>Clinical Details</b>
                            </h1>
                        </div>
                        <group>
                            <div class="oe_title" name="REF_NO" string="Reference Number">

                            </div>
                            <group>
                                <field name="name"/>
                                <field name="section"/>
                                <field name="type"/>
                                <field name="sex"/>
                            </group>
                            <notebook>
                                <page name="Item Line" string="Item Lines">
                                    <field name="item_parameter_ids" widget="section_and_note_one2many"
                                           mode="tree,kanban">
                                        <tree editable="bottom">
                                            <field name="item_name_id"/>
                                            <field name="item_type"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>

                    </sheet>
                </form>

            </field>

        </record>

        <record id="clinical_group_view_tree" model="ir.ui.view">
            <field name="name">clinical_group_tree</field>
            <field name="model">syscraft.clinical.groups.tbl</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="section"/>
                    <field name="type"/>
                </tree>

            </field>

        </record>

        <menuitem id="menu_Tools_Clinical_Groups"
                  name="Clinical Groups"
                  parent="menu_Tools"
                  action="action_SysCMS_clinical_group"
                  sequence="10"
        />
    </data>
</odoo>