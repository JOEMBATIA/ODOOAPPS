<!-- These are the menus for a specific module in this case the SysCMS module -->

<odoo>
    <record id="action_SysCMS_investigations_record_result" model="ir.actions.act_window">
        <field name="name">Record result</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">syscraft.clinic.investigations.record.result.tbl</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_record-result_form" model="ir.ui.view">
        <field name="name">record-result_view_form</field>
        <field name="model">syscraft.clinic.investigations.record.result.tbl</field>
        <field name="arch" type="xml">
            <form String="In tray">
                <header>
                    <header name="delete_lines" type="object" string="Delete" class="oe_highlight"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1>
                            <b>Record Result</b>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <div class="oe_title" name="REF_NO" string="Reference Number">

                            </div>
                        </group>
                        <group>
                            <field name="PATIENT"/>
                            <field name="PHYSICIAN_id"/>
                            <field name="CATEGORIES"/>
                        </group>
                        <group>
                            <field name="DATE"/>
                            <field name="INVESTIGATION"/>
                            <field name="TYPE"/>
                            <field name="CLINIC"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_record-result_tree" model="ir.ui.view">
        <field name="name">record-result_view_tree</field>
        <field name="model">syscraft.clinic.investigations.record.result.tbl</field>
        <field name="arch" type="xml">
            <tree>
                <field name="DATE"/>
                <field name="PATIENT"/>
                <field name="INVESTIGATION"/>
                <field name="TYPE"/>
                <field name="PHYSICIAN_id"/>
                <field name="CLINIC"/>
            </tree>
        </field>
    </record>

    <record id="view_collect_sample_tree" model="ir.ui.view">
        <field name="name">collect-sample_view_search</field>
        <field name="model">syscraft.clinic.investigations.record.result.tbl</field>
        <field name="arch" type="xml">
            <tree string="Collect Sample">
                <field name="DATE"/>
                <field name="PATIENT"/>
                <field name="INVESTIGATION"/>
                <field name="TYPE"/>
                <field name="PHYSICIAN_id"/>
                <field name="CLINIC"/>
            </tree>
        </field>
    </record>
    <menuitem id="menu_Investigations_Record_Result"
              name="Record Result"
              parent="menu_Investigations"
              action="action_SysCMS_investigations_record_result"
              sequence="10"
    />

</odoo>