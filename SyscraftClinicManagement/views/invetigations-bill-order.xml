<!-- These are the menus for a specific module in this case the SysCMS module -->

<odoo>
    <record id="action_SysCMS_investigations_bill_order" model="ir.actions.act_window">
        <field name="name">Bill Investigations order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">syscraft.clinic.investigations.tbl</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_bill-order_form" model="ir.ui.view">
        <field name="name">bill-order_view_form</field>
        <field name="model">syscraft.clinic.investigations.tbl</field>
        <field name="arch" type="xml">
            <form String="Bill order">
                <header>
                    <header name="delete_lines" type="object" string="Delete" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <b>Bill Investigation Order</b>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <div class="oe_title" name="REF_NO" string="Reference Number">

                            </div>
                        </group>
                        <group>
                            <field name="PATIENT"/>
                            <field name="PHYSICIAN_id"/>
                            <field name="CATEGORIES"/>
                        </group>
                        <group>
                            <field name="DATE"/>
                            <field name="INVESTIGATION"/>
                            <field name="TYPE"/>
                            <field name="CLINIC_id"/>
                        </group>
                        <notebook>
                            <page string="Notes" name="Notes">
                                <div>
                                    <group>
                                        <field name="NOTES"/>
                                    </group>
                                </div>
                            </page>
                            <page string="Other info" name="Other info">
                                <div>
                                    <field name="OTHER"/>
                                </div>
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_bill-order_tree" model="ir.ui.view">
        <field name="name">bill-order_view_tree</field>
        <field name="model">syscraft.clinic.investigations.tbl</field>
        <field name="arch" type="xml">
            <tree>
                <field name="DATE"/>
                <field name="PATIENT"/>
                <field name="INVESTIGATION"/>
                <field name="TYPE"/>
                <field name="PHYSICIAN_id"/>
                <field name="CLINIC_id"/>
            </tree>
        </field>
    </record>

    <record id="view_collect-sample_search" model="ir.ui.view">
        <field name="name">collect-sample_view_search</field>
        <field name="model">syscraft.clinic.investigations.collect.sample.tbl</field>
        <field name="arch" type="xml">
            <search string="Patients">
                <field name="PATIENT"/>
                <field name="INVESTIGATION"/>
                <field name="TYPE"/>
                <field name="END_DATE"/>
                <field name="CATEGORIES"/>

            </search>
        </field>
    </record>



    <menuitem id="menu_Investigations_Bill_Investigation_Orders"
              name="Bill Investigations Orders"
              parent="menu_Investigations"
              action="action_SysCMS_investigations_bill_order"
              sequence="10"
    />
</odoo>