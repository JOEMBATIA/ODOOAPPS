<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--    <link rel="stylesheet" href="/SyscraftClinicManagement/static/src/css/custom_styles.css"/>-->

    <data>
        <template id="pharmacy_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="object">
                    <t t-call="web.external_layout">
                        <br/>
                        <br/>
                        <div class="header">
                            <h2>Invoice</h2>
                            <p>Invoice Number:
                                <span t-field="object.REF_NO"/>
                            </p>
                        </div>
                        <br/>
                        <br/>
                        <!-- Company Information Section -->
                        <!--            <div class="company-info">-->
                        <!--                <h3>Company Information</h3>-->
                        <!--                <p>Company:-->
                        <!--                    <span t-field="o.company_id.name"/>-->
                        <!--                </p>-->
                        <!--                <p>Address:-->
                        <!--                    <span t-field="o.company_id.partner_id.street"/>-->
                        <!--                </p>-->
                        <!--                &lt;!&ndash; Add other company fields as needed &ndash;&gt;-->
                        <!--            </div>-->

                        <!-- Customer Information Section -->
                        <br/>
                        <br/>
                        <div class="customer-info">
                            <h3>Patient Information</h3>
                            <p>Patient:
                                <span t-field="object.patient_name_id.NAME"/>
                            </p>
                            <p>Email:
                                <span t-field="object.PATIENT_EMAIL"/>
                            </p>
                            <!-- Add other customer fields as needed -->
                        </div>
                        <br/>
                        <br/>
                        <!-- Invoice Details Section -->
                        <div class="invoice-details">
                            <h3>Invoice Details</h3>
                            <p>Invoice Date:
                                <span t-esc="object.invoice_date"/>
                            </p>
                            <p>Due Date:
                                <span t-esc="object.invoice_date_due"/>
                            </p>
                            <p>Invoice Status:
                                <span t-field="object.STATUS_SYS"/>
                            </p>
                            <!-- Add other invoice fields as needed -->
                        </div>
                        <br/>
                        <br/>

                        <!-- Invoice Lines Section -->
                        <div class="invoice-lines">
                            <h3>Invoice Lines</h3>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Discount</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="object.pharmacy_item_ids" t-as="line">
                                        <td>
                                            <span t-field="line.item_id.product"/>
                                        </td>
                                        <td>
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td>
                                            <span t-field="line.price"/>
                                        </td>
                                        <td>
                                            <span t-field="line.discount"/>
                                        </td>
                                        <td>
                                            <span t-field="line.total"/>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                        <br/>
                        <br/>
                        <!-- Total Amount Section -->
                        <div class="total-amount">
                            <p>
                                <h4>
                                    <b>Total Amount: KSH</b>
                                    <span t-esc="sum(float(line.total) for line in object.pharmacy_item_ids)"/>
                                </h4>
                            </p>
                        </div>

                    </t>
                </t>
            </t>
        </template>


        <record id="pharmacy_report" model="ir.actions.report">
            <field name="name">Prescription Invoice</field>
            <field name="model">syscraft.clinic.pharmacy.tbl</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">SyscraftClinicManagement.pharmacy_report_template</field>
            <field name="report_file">SyscraftClinicManagement.pharmacy_report_template</field>
            <field name="print_report_name">'Prescription'</field>
            <field name="binding_model_id" ref="SyscraftClinicManagement.model_syscraft_clinic_pharmacy_tbl"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>